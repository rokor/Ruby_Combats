<h1>Select your player type</h1>
<%= @user.name %> you are <%= @user.type %>
<div>
  <%= form_for(@user) do |f| %>

    <%= f.label :type %>
    <%= f.select(:type, options_for_select([['Magician'], ['Warrior'], ['Rogue']] )) %>

    <%= f.submit "Save changes", class: "btn btn-primary" %>
  <% end %>

</div>
<%= debug(params) if Rails.env.development? %>